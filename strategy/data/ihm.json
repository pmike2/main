{
	"texture_root" : "../data/textures_ihm",
	"texture_size" : 512,
	"texture_slider_background" : "slider_background.png",
	"default_element_size" : [0.3, 0.3],
	"default_group_margin" : 0.1,
	"default_element_margin" : 0.05,
	"groups" : [
		{
			"name" : "play_mode",
			"type" : "radio",
			"position" : ["left", 1.0],
			"orientation" : "vertical",
			"elements" : [
				{"name" : "select_unit"},
				{"name" : "action_unit", "groups_visible" : ["unit_action"]},
				{"name" : "add_unit", "groups_visible" : ["units"]}
			]
		},
		{
			"name" : "unit_action",
			"type" : "radio",
			"position" : "after:play_mode",
			"orientation" : "vertical",
			"elements" : [
				{"name" : "watch"},
				{"name" : "move"},
				{"name" : "attack"}
			]
		},
		{
			"name" : "units",
			"type" : "radio",
			"position" : "after:play_mode",
			"orientation" : "vertical",
			"elements" : [
				{"name" : "INFANTERY", "key" : "i"},
				{"name" : "TANK", "key" : "t"},
				{"name" : "HELICOPTER", "key" : "h"},
				{"name" : "BOAT", "key" : "b"}
			]
		},
		{
			"name" : "edit",
			"type" : "checkbox",
			"position" : ["left", "top"],
			"orientation" : "horizontal",
			"elements" : [
				{
					"name" : "edit",
					"groups_visible" : ["general_info", "teams", "ia", "edit_mode", "global_edit", "visu"],
					"groups_invisible" : ["play_mode"]
				}
			]
		},
		{
			"name" : "general_info",
			"type" : "checkbox",
			"position" : "after:edit",
			"orientation" : "horizontal",
			"elements" : [
				{"name" : "show_info"},
				{"name" : "units_paused"}
			]
		},
		{
			"name" : "teams",
			"type" : "radio",
			"position" : ["right", "top"],
			"orientation" : "vertical",
			"elements" : [
				{"name" : "Team1"},
				{"name" : "Team2"}
			]
		},
		{
			"name" : "ia",
			"type" : "checkbox",
			"position" : "before:teams",
			"orientation" : "vertical",
			"elements" : [
				{"name" : "Team1"},
				{"name" : "Team2", "checked" : true}
			]
		},
		{
			"name" : "edit_mode",
			"type" : "radio",
			"position" : ["left", 0.0],
			"orientation" : "vertical",
			"elements" : [
				{"name" : "add_element", "groups_visible" : ["elements"]},
				{"name" : "edit_elevation", "groups_visible" : ["elevation", "edit_elevation_params"]},
				{"name" : "erase", "groups_visible" : ["erase_params"]}
			]
		},
		{
			"name" : "elements",
			"type" : "radio",
			"position" : "after:edit_mode",
			"orientation" : "vertical",
			"elements" : [
				{"name" : "TREE", "key" : "t", "groups_visible" : ["tree_params"]},
				{"name" : "STONE", "key" : "s", "groups_visible" : ["stone_params"]},
				{"name" : "RIVER", "key" : "r"},
				{"name" : "LAKE", "key" : "l"}
			]
		},
		{
			"name" : "tree_params",
			"type" : "slider",
			"position" : "after:elements",
			"element_size" : [0.2, 2.0],
			"orientation" : "horizontal",
			"elements" : [
				{"name" : "n_trees", "min_value" : 1.0, "max_value" : 100.0},
				{"name" : "trees_dispersion", "min_value" : 0.5, "max_value" : 8.0}
			]
		},
		{
			"name" : "stone_params",
			"type" : "slider",
			"position" : "after:elements",
			"element_size" : [0.2, 2.0],
			"orientation" : "horizontal",
			"elements" : [
				{"name" : "n_stones", "min_value" : 1.0, "max_value" : 100.0},
				{"name" : "stones_dispersion", "min_value" : 0.5, "max_value" : 8.0}
			]
		},
		{
			"name" : "elevation",
			"type" : "radio",
			"position" : "after:edit_mode",
			"orientation" : "vertical",
			"elements" : [
				{"name" : "ELEVATION_ZERO"},
				{"name" : "ELEVATION_PLUS"},
				{"name" : "ELEVATION_MINUS"}
			]
		},
		{
			"name" : "edit_elevation_params",
			"type" : "slider",
			"position" : "after:elevation",
			"element_size" : [0.2, 2.0],
			"orientation" : "horizontal",
			"elements" : [
				{"name" : "elevation_radius", "min_value" : 1.0, "max_value" : 50.0},
				{"name" : "elevation_factor", "min_value" : 1.0, "max_value" : 10.0},
				{"name" : "elevation_exponent", "min_value" : 0.1, "max_value" : 10.0}
			]
		},
		{
			"name" : "erase_params",
			"type" : "slider",
			"position" : "after:edit_mode",
			"element_size" : [0.2, 2.0],
			"orientation" : "horizontal",
			"elements" : [
				{"name" : "erase_radius", "min_value" : 1.0, "max_value" : 50.0}
			]
		},
		{
			"name" : "global_edit",
			"type" : "button",
			"position" : ["left", "bottom"],
			"orientation" : "horizontal",
			"elements" : [
				{"name" : "randomize", "key" : "r"},
				{"name" : "clear", "key" : "c"},
				{"name" : "save", "key" : "s"},
				{"name" : "load", "key" : "l"}
			]
		},
		{
			"name" : "visu",
			"type" : "checkbox",
			"position" : ["right", 0.0],
			"orientation" : "vertical",
			"elements" : [
				{"name" : "repere"},
				{"name" : "elevation", "checked" : true},
				{"name" : "elements", "checked" : true},
				{"name" : "units", "checked" : true},
				{"name" : "sea", "checked" : true},
				{"name" : "bbox"},
				{"name" : "grid", "groups_visible" : ["grid_type", "grid_unit_type"]},
				{"name" : "unit_life", "checked" : true},
				{"name" : "fow", "checked" : true}
			]
		},
		{
			"name" : "grid_type",
			"type" : "radio",
			"position" : "before:visu",
			"orientation" : "vertical",
			"elements" : [
				{"name" : "TERRAIN"},
				{"name" : "ELEVATION"},
				{"name" : "UNITS_POSITION"}
			]
		},
		{
			"name" : "grid_unit_type",
			"type" : "radio",
			"position" : "before:grid_type",
			"orientation" : "vertical",
			"elements" : [
				{"name" : "INFANTERY"},
				{"name" : "TANK"},
				{"name" : "HELICOPTER"},
				{"name" : "BOAT"}
			]
		}
	]
}
